<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Theme Colors. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>


        <!-- Enable dialog stuff -->
        <item name="android:dialogTheme">@style/AppTheme.DialogTheme</item>

    </style>

    <!-- Styles for main pop-up dialogs -->
    <style name="AppTheme.DialogTheme" parent="Theme.AppCompat.Light.Dialog">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary_text_default_material_dark</item>

    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:textColorPrimary">@color/primaryTextLight</item>
        <item name="android:textColorSecondary">@color/primaryTextLight</item>
    </style>


</resources>
